                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time slot"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    //time slot 1
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time slot 1"
                        android:layout_marginTop="10dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <Button
                            android:id="@+id/time1mor"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/buttonlognout"
                            android:text="6h-7h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/time2mor"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/time1mor"
                            android:background="@drawable/buttonlognout"
                            android:text="7h-8h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintStart_toEndOf="@+id/time1mor"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/time3mor"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/time2mor"
                            android:background="@drawable/buttonlognout"
                            android:text="8h-9h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintStart_toEndOf="@+id/time2mor"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/time4mor"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_toRightOf="@+id/time3mor"
                            android:background="@drawable/buttonlognout"
                            android:text="9h-10h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/time3mor"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:id="@+id/time5mor"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_alignBottom="@id/time1mor"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/buttonlognout"
                            android:text="10h-11h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/time1mor"
                            app:layout_constraintVertical_bias="0.151" />

                        <Button
                            android:id="@+id/time6mor"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_alignBottom="@id/time1mor"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_toRightOf="@+id/time5mor"
                            android:background="@drawable/buttonlognout"
                            android:text="11h-12h"
                            android:textColor="@color/black"
