                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/time2aft"
                            android:background="@drawable/buttonlognout"
                            android:text="14h-15h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintStart_toEndOf="@+id/time2aft"
