                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time slot 4"
                        android:layout_marginTop="10dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="40dp">

                        <Button
                            android:id="@+id/time1nig"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/buttonlognout"
                            android:text="0h-1h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/time2nig"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/time1nig"
                            android:background="@drawable/buttonlognout"
                            android:text="1h-2h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintStart_toEndOf="@+id/time1nig"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/time3nig"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/time2nig"
                            android:background="@drawable/buttonlognout"
                            android:text="2h-3h"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            app:layout_constraintStart_toEndOf="@+id/time2nig"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/time4nig"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_toRightOf="@+id/time3nig"
                            android:background="@drawable/buttonlognout"
                            android:text="3h-4h"
